<!DOCTYPE html>

<html>
<head>
  <%- include('./template/header') %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>

<body>
  <%- include('./template/nav_admin') %>
  <main>
    <div class="login-wrapper">
      <h2>編輯抽獎</h2>
      <% if(errorMessage && errorMessage.length > 0){ %>
        <div class="alert">
          <%= errorMessage %>
        </div>
      <% } %>
      <form action="/update_lottery/<%= prize.id %>" method="POST">
        <div class="form-group">
          <label>獎項</label>
          <input type="text" class="form-control" name="prize" value="<%= prize.prize %>" />
        </div>
        <div class="form-group">
          <label>描述</label>
          <input type="text" class="form-control" name="description" value="<%= prize.description %>" />
        </div>
        <div class="form-group">
          <label>獎項圖片</label>
          <input type="text" class="form-control" name="image" value="<%= prize.image %>" />
        </div>
        <div class="form-group">
          <label>機率(%)</label>
          <input type="text" class="form-control" name="probability" value="<%= prize.probability %>" />
        </div>
        <button type="submit" class="btn btn-primary">送出</button>
      </form>
       
    </div>
  </main>
  <%- include('./template/footer') %>
</body>
</html>