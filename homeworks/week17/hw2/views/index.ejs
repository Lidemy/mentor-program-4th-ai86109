        </div>
        <div class="lottery__content">
          <div class="lottery__content-title">獎  品：</div>
          <span>
          <% prizes.forEach((prize) => { %>
            ❤ <%= prize.prize %>：<%= prize.description %><br>
          <% }) %>
          </span>
        </div>
        <div class="lottery__btn"><button>我要抽獎</button></div>
      </div>
    </div>
    <div class="prize__text"></div>
    <div class="prize__btn"><button>我要抽獎</button></div>
  </main>
  <%- include('./template/footer') %>
  <script src="/public/index.js"></script>
